<div class="d-flex justify-content-center mt-4">
  <div class="card shadow-sm rounded-4 w-100" style="max-width: 520px;">
    <div class="card-body p-4">
      <h2 class="fw-bold mb-3">
        <i class="fas fa-user-plus me-2 text-secondary"></i>
        Criar conta
      </h2>

      <p class="text-muted mb-4">Preencha seus dados para acessar a plataforma.</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :nome, class: "form-label" %>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-id-card"></i></span>
            <%= f.text_field :nome, class: "form-control", placeholder: "Seu nome completo", autocomplete: "name" %>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
            <%= f.email_field :email, class: "form-control", placeholder: "seu@email.com", autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="mb-3">
          <div class="d-flex justify-content-between align-items-center">
            <%= f.label :password, "Senha", class: "form-label mb-0" %>
            <% if @minimum_password_length %>
              <small class="text-muted"><%= @minimum_password_length %> caracteres no mínimo</small>
            <% end %>
          </div>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-lock"></i></span>
            <%= f.password_field :password, class: "form-control", placeholder: "Crie uma senha", autocomplete: "new-password" %>
          </div>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, "Confirmação de senha", class: "form-label" %>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-shield-halved"></i></span>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repita a senha", autocomplete: "new-password" %>
          </div>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "Criar conta", class: "btn btn-primary" %>
          <%= link_to new_session_path(resource_name), class: "btn btn-outline-secondary" do %>
            <i class="fas fa-right-to-bracket me-1"></i> Já tenho conta
          <% end %>
        </div>
      <% end %>

      <hr class="my-4">

      <div class="text-center">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
